  return (
    <Container fluid className="bg-success text-white">
      <Row className="align-items-center py-3">
        <Col md={2}>
          <Image src="sunlife-logo.png" alt="sunlife" width={150} />
        </Col>
        <Col md={10} className="text-end">
          <Row>
            <Col className="text-end">
              <p>
                <span>Legal</span>
                <span className="mx-2">|</span>
                <span>Privacy</span>
                <span className="mx-2">|</span>
                <span>Security</span>
                <span className="mx-2">|</span>
                <span>Sitemap</span>
                <span className="mx-2">|</span>
                <span>Feedback</span>
              </p>
            </Col>
          </Row>
          <Row>
            <Col className="text-end">
              <p>Â© Sun Life Assurance Company of Canada. All rights reserved.</p>
            </Col>
          </Row>
        </Col>
      </Row>
    </Container>
  );
}

